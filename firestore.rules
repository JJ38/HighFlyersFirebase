rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    match /{document=**} {
          	allow read, write: if request.auth != null;
    }
    
    match /Settings/postcodeExceptions {
       allow read: if true;
       allow write: if is_authenticated_with_role('admin');
    }
    
    match /Settings/birdSpecies {
       allow read: if true;
       allow write: if is_authenticated_with_role('admin');
    }
    
    match /Settings/priceDefinitions {
       allow read: if true;
       allow write: if is_authenticated_with_role('admin');
    }
      
    match /Settings/fuelSettings {
       allow read, write: if is_authenticated_with_role('admin');
    }
    
    match /drivers/{driverId} {
      // Allow read and write access if the user is an admin or if the user is a driver accessing their own document.
      allow read, write: if is_authenticated_with_role('admin') || 
                          (is_authenticated_with_role('driver') && request.auth.uid == driverId);
    }

    
  }
  
  // Helper function to check if the user is authenticated and has a specific role
  function is_authenticated_with_role(role) {
    return request.auth != null && request.auth.token.roles[role] == true;
  }


  
}